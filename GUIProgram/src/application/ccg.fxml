<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="application.Controller">
  <bottom>
    <HBox alignment="CENTER" spacing="10.0">
      <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
      </padding>
      <Button fx:id= "loadbtn" alignment="CENTER" onAction="#loadImage" text="Load Image" />
      <Button fx:id="runbtn" onAction="#runbtn" alignment="CENTER" text="Run" />
      <Button fx:id="debugbtn" onAction="#debugbtn" alignment="CENTER" text="Debug" />
      <Button fx:id="cancelbtn" onAction="#cancelapp" alignment="CENTER" text="Cancel" />
    </HBox>
  </bottom>
  <center>
    <VBox alignment="CENTER">
      <padding>
        <Insets left="10.0" right="20.0" />
      </padding>
      <ImageView fx:id="originalImage" />
    </VBox>
  </center>
</BorderPane>
